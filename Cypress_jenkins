pipeline {
  agent any

  environment {
    CI = 'true' // Tells Cypress it's running in a CI environment
  }

  stages {
    stage('Checkout') {
      steps {
        git url: 'https://github.com/HimanshuJain082001/Jenkins.git', branch: 'New'
      }
    }

    stage('Install Dependencies') {
      steps {
        dir('Cypress_Project') {
          sh 'npm ci' // or use 'npm install' if no package-lock.json
        }
      }
    }

    stage('Run Cypress Tests') {
      steps {
        dir('Cypress_Project') {
          sh 'npx cypress run'
        }
      }
    }
  }

  post {
    always {
      dir('Cypress_Project') {
        // Archive Cypress test artifacts
        archiveArtifacts artifacts: 'cypress/videos/**/*.*', allowEmptyArchive: true
        archiveArtifacts artifacts: 'cypress/screenshots/**/*.*', allowEmptyArchive: true
      }
    }
  }
}
